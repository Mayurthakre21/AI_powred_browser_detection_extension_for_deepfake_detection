{
  "manifest_version": 3,
  "name": "Video Extractor",
  "version": "1.0",
  "description": "Extracts video URLs from web pages.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
